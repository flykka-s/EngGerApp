<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LearnApp.Pages.TaskP"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#1974D2">
    <ScrollView>
        <StackLayout>
            <Label x:Name="text" Text="Заголовок" Style="{StaticResource LabelMedium}"  TextColor="White" FontSize="25" Padding="20, 25, 0, 0" FontAttributes="Bold" />
            <Frame BackgroundColor="White" CornerRadius="10" Margin="20">
                <Editor x:Name="edit" WidthRequest="200" TextColor="#1974D2" FontAttributes="Bold" FontSize="20" HeightRequest="400"/>
            </Frame>
            <Button x:Name="btn" Text="Проверить" Clicked="btn_Clicked" TextColor="#1974D2" FontSize="15" BackgroundColor="White" FontAttributes="Bold" CornerRadius="10" HorizontalOptions="Center" WidthRequest="250"/>
        </StackLayout>
    </ScrollView>
</ContentPage>