<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LearnApp.Pages.SelectPage"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             mc:Ignorable=""
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#1974D2">
    <ScrollView>
        <StackLayout>
            <Label/>
            <Grid HeightRequest="150" WidthRequest="200" HorizontalOptions="Center" Margin="0, 20, 0, 80">
                <Image x:Name="BannerImg" Source="history_book.png" HeightRequest="250" WidthRequest="250" HorizontalOptions="Center"
                    VerticalOptions="Center" />
            </Grid>


           
            <Label x:Name="name" Text="Выберите язык для изучения" TextColor="White" FontSize="35" HorizontalTextAlignment="Center" FontAttributes="Bold"/>
            <Label/>
            <Button Text="Английский" TextColor="#1974D2" FontSize="20" BackgroundColor="White" FontAttributes="Bold" CornerRadius="10" HorizontalOptions="Center" WidthRequest="300"
                    Command="{Binding GoEng}"/>
            <Button Text="Немецкий" TextColor="#1974D2" FontSize="20" BackgroundColor="White" FontAttributes="Bold" CornerRadius="10" HorizontalOptions="Center" WidthRequest="300"
                    Command="{Binding GoNem}"/>
        </StackLayout>
    </ScrollView>
</ContentPage>